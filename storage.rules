
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite que qualquer usuário autenticado (incluindo anônimos)
    // crie arquivos na pasta 'error_reports'. A pasta e subpastas
    // são especificadas usando {allPaths=**}.
    // A leitura, atualização e exclusão não são permitidas por padrão para segurança.
    match /error_reports/{allPaths=**} {
      allow create: if request.auth != null;
    }
  }
}
