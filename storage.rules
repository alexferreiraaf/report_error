rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // A pasta error_reports e seus subdiretórios (midia, banco_de_dados)
    // permitem leitura e escrita para qualquer usuário autenticado.
    match /error_reports/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
