# Firebase Client SDK Config from your Firebase project settings
# Go to your Firebase project -> Project settings -> General
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Firebase Admin SDK Config (for Server Actions)
# Go to Project Settings -> Service accounts in Firebase console.
# Generate a new private key and get the JSON content.
# Then, base64 encode the entire JSON file content.
# e.g., on macOS/Linux: base64 -w 0 path/to/your/serviceAccountKey.json
# The output is a single long string.
FIREBASE_SERVICE_ACCOUNT_KEY_BASE64=
